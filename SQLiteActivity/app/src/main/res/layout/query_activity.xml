<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/text4"
        app:layout_constraintLeft_toLeftOf="@+id/text4"
        android:textSize="20dp"
        android:text="筛选"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="thing"
        app:layout_constraintRight_toLeftOf="@+id/thing"
        app:layout_constraintTop_toTopOf="@+id/thing"
        app:layout_constraintBottom_toBottomOf="@+id/thing"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="time"
        app:layout_constraintRight_toLeftOf="@+id/confine"
        app:layout_constraintTop_toTopOf="@+id/confine"
        app:layout_constraintBottom_toBottomOf="@+id/confine"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/thing"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/confine"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/thing"
        app:layout_constraintTop_toTopOf="@id/thing"
        app:layout_constraintEnd_toEndOf="@+id/thing"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/property2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/confine"
        app:layout_constraintTop_toTopOf="@+id/confine"
        app:layout_constraintBottom_toBottomOf="@+id/confine"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/text3"
        app:layout_constraintRight_toRightOf="@+id/confine"
        app:layout_constraintTop_toBottomOf="@+id/confine"
        android:layout_marginTop="50dp"
        android:text="Query"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>